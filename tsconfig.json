{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "cypress/**/*.ts",       // Include all TypeScript files in the Cypress folder
    "cypress.config.js",     // Include the Cypress configuration file
    "src/**/*.ts"           // Include all TypeScript files in your source directory (if needed)
  ],
  "files": [
    "cypress/**/*.ts",       // Include all TypeScript files in the Cypress folder
    "cypress.config.js",     // Include the Cypress configuration file
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
